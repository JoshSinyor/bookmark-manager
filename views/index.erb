<div class = "toolbar">
  <form action = "/add_bookmark">
    <input type = "submit" value = "Add Bookmark">
  </form>
</div>

<div>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li class="bookmark" id="bookmark-<%= bookmark.id %>">
        <a href="<%=bookmark.url%>"><%=bookmark.title%></a>
        <form action = "/delete_bookmark/<%=bookmark.id%>" method="post" >
          <input type="hidden" name="_method" value="delete">
          <input type = "submit" name="delete_<%= bookmark.id %>" value = "Delete Bookmark">
        </form>
        <form  action="/edit_bookmark/<%=bookmark.id%>" method="get">
          <input type="submit" name="edit_<%= bookmark.id %>" value="Edit Bookmark">
        </form>
      </li>
    <% end %>
  </ul>
</div>
